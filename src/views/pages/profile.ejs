<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Home</title>
    <style>
       
       body {
            background-color: #71619b; /* Set background color for the entire page */
            color: #fff; /* Set text color to white for better contrast */
        }
        h1 {
            text-align: center;
            color: #FCC926; 
            text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            background-color: rgb(210, 210, 255);;
        }

        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            background-color: #f2f2f2;
            color: #FCC926; 
            text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black;
        }

        form {
            margin-top: 20px;
        }

        .hidden {
            display: none;
        }



      
    </style>
</head>

<body>
    <%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>
    <main>
        <div class="container">
            <h1>Welcome Back <%= username %>!</h1>
            <table>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td>Username:</td>
                    <td><%= username %></td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td>
                        <span id="passwordText">***********</span>
                        <button class="btn btn-primary" onclick="togglePasswordVisibility()">Change Password</button>
                    </td>
                </tr>
            </table>
            <div id="changePasswordForm" class="hidden">
                <h2>Change Password</h2>
                <form action="/profile/changePassword" method="POST">
                    <label for="password">New Password:</label>
                    <input type="password" id="password" name="password" required>
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            <form action="/profile/delete" method="POST">
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete your profile?')">Delete Profile</button>
            </form>
        </div>
    </main>

    <%- include ('../partials/footer') %>

    <script>
        function togglePasswordVisibility() {
            const passwordText = document.getElementById('passwordText');
            const changePasswordForm = document.getElementById('changePasswordForm');

            if (passwordText.style.display === 'none') {
                passwordText.style.display = 'inline';
                changePasswordForm.style.display = 'none';
            } else {
                passwordText.style.display = 'none';
                changePasswordForm.style.display = 'block';
            }
        }
    </script>
</body>

</html>
