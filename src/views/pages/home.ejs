<!DOCTYPE html>
<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<head>
    <style>
      button {
            padding: 8px;
            background-color: #389d69;
            color: #fff;
        }
    </style>
</head>
<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card-deck">
          <div class="card" id="hobby-card-1">
            <img class="card-img-top" src="https://raw.githubusercontent.com/stichmc/wheel-wizard/main/src/resources/img/buyCar.png" alt="buyCar" height="300" width="100">
            <div class="card-body">
              <h5 class="card-title">Buy</h5>
              <p class="card-text">Find your next car here.</p>
              <button class="btn btn-primary" onclick="redirectToPage('/buy')">Go to Buy</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card" id="hobby-card-2">
          <img class="card-img-top" src="https://raw.githubusercontent.com/stichmc/wheel-wizard/main/src/resources/img/sellCar.png" alt="sellCar" height="300" width="100">
          <div class="card-body">
            <h5 class="card-title">Sell</h5>
            <p class="card-text">List your car here.</p>
            <button class="btn btn-primary" onclick="redirectToPage('/sell')">Go to Sell</button>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card" id="hobby-card-3">
          <img class="card-img-top" src="https://raw.githubusercontent.com/stichmc/wheel-wizard/main/src/resources/img/accessory.png" alt="accessory" height="300" width="150">
          <div class="card-body">
            <h5 class="card-title">Accessories</h5>
            <p class="card-text">Any accessory your car might need.</p>
            <button class="btn btn-primary" onclick="redirectToPage('/accessories')">Go to Accessories</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>

<script>
  function redirectToPage(page) {
    window.location.href = page;
  }
</script>
