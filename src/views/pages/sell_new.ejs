<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main class="container">
    <h1>List a Car to sell</h1>
    <% if (locals.message) { %>
        <div
          class="alert alert-<%- locals.error ? 'danger' : 'success' %>"
          role="alert"
        >
          <%= message %>
          <div class="mt-3">
            <a href="/sell" class="btn btn-link">View Listing</a>
          </div>
        </div>
      <% } %>
    <div class="login-box mt-5">
    <form action="/sell/new" method="POST"> 
        <div class="mb-3">
            <label for="make">Make:</label>
            <input type="text" id="make" name="make" required/>
        </div>
        
        <div class="mb-3">
            <label for="model">Model:</label>
            <input type="text" id="model" name="model" required/>
        </div>

        <div class="mb-3">
            <label for="color">Color:</label>
            <input type="text" id="color" name="color" required/>
        </div>

        <div class="mb-3">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" required/>
        </div>

        <div class="mb-3">
            <label for="miles">Miles:</label>
            <input type="number" id="miles" name="miles" required/>
        </div>

        <div class="mb-3">
            <label for="mpg">Engine Type:</label>
            <input type="text" id="car_description" name="car_description" required/>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>

<%- include ('../partials/footer') %>